{
  "name": "@dephub/lint",
  "type": "module",
  "version": "1.0.1",
  "description": "A lightweight ESLint wrapper with custom configuration and dependency management.",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "bin": {
    "lint": "./dist/cli.js"
  },
  "scripts": {
    "prepublishOnly": "pnpm clean && pnpm check-types && pnpm build && pnpm lint",
    "release": "pnpm publish",
    "check-types": "tsc --noEmit",
    "lint": "node dist/cli.js . --max-warnings 0",
    "clean": "rm -rf dist",
    "build": "vite build",
    "dev": "vite build -w",
    "start": "node dist/cli.js"
  },
  "keywords": [
    "lint",
    "eslint",
    "react",
    "next",
    "node",
    "javascript",
    "typescript",
    "wrapper",
    "linter",
    "code-quality",
    "code-review",
    "clean-code",
    "static-analysis"
  ],
  "author": {
    "name": "Estarlin R",
    "email": "dev@estarlincito.com",
    "url": "https://estarlincito.com"
  },
  "files": [
    "LICENSE",
    "README.md",
    "dist"
  ],
  "license": "MIT",
  "homepage": "https://github.com/estarlincito/dephub-lint#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/estarlincito/dephub-lint.git"
  },
  "bugs": {
    "url": "https://github.com/estarlincito/dephub-lint/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "eslint": "^9.35.0",
    "@dephub/cli": "^1.0.0",
    "@dephub/package-install": "^1.0.1",
    "@dephub/package-manager": "^1.0.0",
    "@dephub/package-check": "^1.0.0",
    "@dephub/cache": "^2.0.0",
    "@dephub/ask": "^1.0.0",
    "@dephub/spawn": "^1.0.0",
    "@dephub/logger": "^1.1.0",
    "@dephub/spinner": "^1.0.0"
  },
  "devDependencies": {
    "@dephub/lint-ts": "^1.0.0",
    "@dephub/glob": "^1.0.0",
    "@dephub/path": "^1.0.0",
    "@types/node": "^24.3.1",
    "typescript": "^5.9.2",
    "eslint": "^9.37.0",
    "vite": "^7.1.4",
    "vite-plugin-dts": "^4.5.4"
  }
}
