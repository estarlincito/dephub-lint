{
  "name": "@dephub/copyright",
  "type": "module",
  "version": "1.0.0",
  "description": "Tiny utility to generate dynamic copyright notice strings based on the build year.",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "scripts": {
    "prepublishOnly": "pnpm clean && pnpm check-types && pnpm build && pnpm lint",
    "release": "pnpm publish",
    "check-types": "tsc --noEmit",
    "lint": "lint . --max-warnings 0",
    "clean": "rm -rf dist",
    "build": "vite build",
    "dev": "vite build -w",
    "start": "node dist/cli.js",
    "pack": "pnpm pack"
  },
  "keywords": [
    "copyright",
    "year",
    "year-range",
    "license",
    "notice",
    "utility",
    "typescript",
    "javascript",
    "esm",
    "build-year",
    "date",
    "dephub"
  ],
  "author": {
    "name": "Estarlin R",
    "email": "dev@estarlincito.com",
    "url": "https://estarlincito.com"
  },
  "files": [
    "LICENSE",
    "README.md",
    "dist"
  ],
  "license": "MIT",
  "homepage": "https://github.com/estarlincito/dephub-copyright#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/estarlincito/dephub-copyright.git"
  },
  "bugs": {
    "url": "https://github.com/estarlincito/dephub-copyright/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@dephub/glob": "^1.0.1",
    "@dephub/lint": "^1.0.0",
    "@dephub/lint-ts": "^1.0.0",
    "@dephub/path": "^1.0.1",
    "@types/node": "^25.2.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4"
  }
}
